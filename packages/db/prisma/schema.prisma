generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  imageUrl    String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  animeId     String
  anime       AnimeSeries @relation(fields: [animeId], references: [id])
  items       OrderItem[]
  
  // New fields for UI Homepage
  isSale      Boolean  @default(false)
  salePrice   Decimal? @db.Decimal(10, 2)
  isPreorder  Boolean  @default(false)
  releaseDate DateTime?
  featured    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model AnimeSeries {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?   @db.Text
  coverImage  String?
  featured    Boolean   @default(false)
  products    Product[]
}

model Order {
  id        String      @id @default(cuid())
  status    String      @default("PENDING")
  total         Decimal     @db.Decimal(10, 2)
  items         OrderItem[]
  customerName  String
  email         String
  address       String
  city          String
  zipCode       String
  userId        String?     // Link to Clerk User ID (Optional for guest checkout/backwards compatibility)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
}
